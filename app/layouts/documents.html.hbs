<link rel="stylesheet" media="screen, projection"
    href="/styles/github.css"></link>
<link rel="stylesheet" media="screen, projection"
    href="/styles/pygment-github.css"></link>
<link rel="stylesheet" media="screen, projection"
    href="/styles/markdown.css"></link>

<script src="/babel.js"></script>
<script>
    function runLangJs(){
        $(function(){ //defer
            $('.lang-js').each(function(){
                var script = document.createElement('script');
                script.type = "text/babel";
                $(script).text('(function(){\n' + $(this).text() + '\n})()');

                $('#script-holder').append(script);
            });
        });
    }
</script>
<section class="content">
    <article id="post" class="row post {{{class}}}" typeof="sioc:post" about="{{{uri}}}" lang="ko-kr">
        {{! Date & Title }}
        <div class="col-sm-2 small-font">
            <br /><br />
            <p property="dc:created">{{{d-format 'YYYY MMM DD' date}}}</p>

            {{! social button }}
            <div id="social-buttons" class="top-line">
              <ul class="unstyled">
                <li><a class="twitter-share-button" href="https://twitter.com/share"
                  data-url="{{{s-slice package.homepage 0 -1}}}{{{uri}}}" data-via="pismute"
                  data-count="horizontal" data-lang="en">tweet</a></li>
                <li><div class="g-plusone" data-size="medium"
                    data-href="{{{s-slice package.homepage 0 -1}}}{{{uri}}}"></div></li>
                <li><div class="fb-like"
                  data-href="{{{s-slice package.homepage 0 -1}}}{{{uri}}}" data-send="false"
                  data-layout="button_count" data-show-faces="false"></div></li>
              </ul>
            </div>
            {{! / social button }}

            {{! Keywords }}
            <p class="small-font top-line">{{{_keyword-links this.keywords}}}</p>
        </div>

        {{! Content Container }}
        <div class="col-sm-10">
            {{! Content }}
            <div property="sioc:content">{{{contents}}}</div>
        </div>
    </article>

    <span id="script-holder"></span>
</section>

<div id="fb-root"></div>
<script src="//connect.facebook.net/en_US/all.js#xfbml=1"></script>
<script src="http://platform.twitter.com/widgets.js"></script>
<script src="https://apis.google.com/js/plusone.js"></script>
