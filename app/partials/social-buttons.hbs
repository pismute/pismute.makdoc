<div id="social-buttons" class="top-line">
    <ul class="unstyled">
        <li><a class="twitter-share-button"
                href="https://twitter.com/share"
                data-url="{{{s-slice package.homepage 0 -1}}}{{{uri}}}"
                data-via="pismute"
                data-count="horizontal"
                data-lang="en">Tweet</a></li>
        <li><div class="g-plusone"
                data-size="medium"
                data-href="{{{s-slice package.homepage 0 -1}}}{{{uri}}}"></div></li>
        <li><div class="fb-like"
                data-href="{{{s-slice package.homepage 0 -1}}}{{{uri}}}"
                data-send="false"
                data-layout="button_count"
                data-show-faces="false"></div></li>
    </ul>

    <div id="fb-root"></div>
    <script src="//connect.facebook.net/en_US/all.js#xfbml=1"></script>
    <script src="http://platform.twitter.com/widgets.js"></script>
    <script src="https://apis.google.com/js/plusone.js"></script>
</div>
